<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> Title </th>
                        <th> date</th>
                        <th>location</th>
                        <th> description </th>
                        <th>participants</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>


                        <td>{{title}}</td>
                        <td>{{date}}</td>
                        <td>{{place}}</td>
                        <td>{{description}}</td>
                        <td><button class="btn btn-primary" style="background-color: rgb(157, 101, 157);"
                                onclick="unirmealevento(id,{{userid}})">Add me
                                to the event</button>
                        </td>
                        <td>{{owner.name}}</td>

                        <td><button class="btn btn-primary" style="background-color: rgb(157, 101, 157);color:white">
                                <a href="/event/edit/{{_id}}">
                                    Edit event</a>

                            </button>
                        <td>
                            <form action="/event/delete/{{_id}}" method="POST">
                                <input type="submit" value="Delete" class="btn btn-primary"
                                    style="background-color: rgb(157, 101, 157);">
                            </form>






                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>
</div>